{
  "name": "@shopify/mini-oxygen",
  "author": "Shopify Inc.",
  "bin": {
    "oxygen-preview": "./dist/bootstrap.js",
    "oxygen-gen-config": "./dist/gen-config.js"
  },
  "publishConfig": {
    "access": "public",
    "@shopify:registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">16.7.0"
  },
  "version": "0.1.0",
  "description": "Development assistant for custom Shopify Oxygen hosted storefronts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/Shopify/mini-oxygen.git",
  "license": "MIT",
  "scripts": {
    "dev": "tsc -p . --preserveWatchOutput -w",
    "build": "tsc -p . && chmod +x dist/bootstrap.js dist/run.js dist/gen-config.js",
    "lint": "eslint --ext .js,.ts --max-warnings 0 src",
    "lint:format": "yarn run lint --fix",
    "type-check": "yarn tsc --noEmit"
  },
  "files": [
    "dist/**"
  ],
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@miniflare/cache": "^2.5.1",
    "@miniflare/core": "^2.5.1",
    "@miniflare/runner-vm": "^2.5.1",
    "@miniflare/shared": "^2.5.1",
    "@miniflare/storage-memory": "^2.5.1",
    "@types/connect": "^3.4.35",
    "@types/mime": "^2.0.3",
    "body-parser": "1.20.0",
    "connect": "^3.7.0",
    "inquirer": "^9.0.0",
    "mime": "^3.0.0",
    "semiver": "^1.1.0",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@miniflare/web-sockets": "2.5.1",
    "@shopify/eslint-plugin": "^41.2.0",
    "@shopify/prettier-config": "^1.1.2",
    "@types/body-parser": "1.19.2",
    "@types/inquirer": "^8.2.1",
    "@types/node": "18",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2"
  }
}
